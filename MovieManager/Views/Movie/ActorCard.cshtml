@model ActorViewModel

@using MovieManager.Services
@using MovieManager.Models.DataModels
@{
	ViewData["Title"] = "Actor";
}
@section styles{
	<link href="~/css/style.css" rel="stylesheet">
	<link href="~/css/styleMovieCard.css" rel="stylesheet">

	<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
}

<div class="MovieCard" >
	<div class="flex-container">
	   <div class="flex-items">	
		    <a href="https://www.themoviedb.org/person/@Model.Person.Id">
				<img class="moviePoster" style="height:600px !important" alt="Image" src="@Model.PhotoUrl"> 
			</a>
		</div>
	   <div class="flex-items">
		<h2 class="movieTitle">	@Model.Person.Name </h2>

		<!--<p class="movieRating">  ATmovie.ReleaseDate </p>-->
		<p class="movieDesc"> @Model.Person.Biography  </p>
		<h3 style="color:yellow; position: fixed; top: 20%; right: 0%; width: 20vw"> 
				Born: <br/>
				@Model.Person.PlaceOfBirth

				<br/> Roles: <br/>
				@foreach(var item in @Model.MovieCredits.Cast){
					@item.Title @:- played @item.Character
					<br/>
				}
		</h3>
		</div>
	</div>
</div>