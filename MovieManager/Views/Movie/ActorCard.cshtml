@model ActorViewModel

@using MovieManager.Services
@using MovieManager.Models.DataModels
@{
	ViewData["Title"] = "Actor";
}
@section styles{
	<link href="~/css/style.css" rel="stylesheet">
	<link href="~/css/styleMovieCard.css" rel="stylesheet">

	<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
}

<div class="MovieCard" >
	<div class="flex-container">
	   <div class="flex-items">	
		    <a href="https://www.themoviedb.org/person/@Model.ActorId">
				<img class="moviePoster" style="height:80% !important" alt="Image" src="@Model.Images"> 
			</a>
		</div>
	   <div class="flex-items">
		<h2 class="movieTitle">	@Model.FullName </h2>

		<!--<p class="movieRating">  ATmovie.ReleaseDate </p>-->
		<p class="movieDesc"> @Model.Description </p>
		<h2> @Model.CountryCode </h2>
		<h2> @Model.MovieCredits </h2>


		<div class="buttonsList">
			<input class="TrailerButton" id="TrailerButton" type="button" value="MOVIE LIST???" onclick=""><br/>
		</div>
		</div>
	</div>
</div>