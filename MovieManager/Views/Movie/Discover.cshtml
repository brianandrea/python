@{
	ViewData["Title"] = "Home Page";

	var watched = MovieManager.Services.GetFromDB
		.GetUserMovieList("417f4178-5150-4c71-906f-7869a4ef347d", "78d912ef-ee0e-4129-b898-c9dbfc59489d");
	int counter = 1;
}
@section styles{
	<link href="~/css/style.css" rel="stylesheet">
	<link href="~/css/styleCarousel.css" rel="stylesheet">
	<link href="~/css/styleMovieContainer.css" rel="stylesheet">

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
	<link rel="stylesheet" href="./style.css">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}


<input type="radio" name="slide-nav" id="1">
<input type="radio" name="slide-nav" id="2">
<input type="radio" name="slide-nav" id="3">
<input type="radio" name="slide-nav" id="4" checked>
<input type="radio" name="slide-nav" id="5">
<input type="radio" name="slide-nav" id="6">
<input type="radio" name="slide-nav" id="7">

<h1>DISCOVER MOVIES: </h1>

<ul class="carousel">
	@foreach(var movie in watched)
	{
		<label for="@counter">
			<div class="movieContainer">
				<div class="flex-container">
				<div class="flex-items">	
					<img class="moviePoster" alt="Image" src="@movie.PosterUrl"> 	
				</div>
				<div class="flex-items">
					<h2 class="movieTitle"> @movie.Title </h2>
					<p class="movieRating"> <img class="IMDBStar" src="~/img/star.png"> @movie.Rating/10 - Rating</p>
					<p class="movieDesc"> @movie.Overview </p>
					<div class="buttonsList">
						<input class="TrailerButton" id="TrailerButton" type="button" value="▶ Trailer" onclick=""><br/>
						<input class="TrailerButton" id="TrailerButton" type="button" value="Write a Review" onclick=""><br/>
					</div>
				</div>
				</div>
			</div>
		</label>
		counter++;
	}
</ul>

<ul class="carousel-nav"> <!--dots below cards-->
  <label for="1"></label>
  <label for="2"></label>
  <label for="3"></label>
  <label for="4"></label>
  <label for="5"></label>
  <label for="6"></label>
  <label for="7"></label>
</ul>

